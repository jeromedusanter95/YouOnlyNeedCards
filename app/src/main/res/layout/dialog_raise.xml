<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_raise_width"
    android:layout_height="wrap_content"
    android:padding="@dimen/sizing_2"
    android:background="@drawable/background_player_profile_view_add_edit_play"
    >

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewTitle"
        style="@style/AppTheme.Text.GameActivity.Informations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sizing_1"
        android:layout_marginLeft="@dimen/sizing_1"
        android:text="@string/game_activity_how_many_raise"
        app:layout_constraintEnd_toStartOf="@id/textViewMoneyToRaise"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewMoneyToRaise"
        style="@style/AppTheme.Text.GameActivity.Informations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sizing_1"
        android:layout_marginLeft="@dimen/sizing_1"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewTitle"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekBarRaise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sizing_1"
        android:thumb="@drawable/thumb_seek_bar_set_new_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonMinRaise"
        style="@style/AppTheme.Button.GameActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sizing_3"
        android:background="@drawable/background_button_transparent"
        app:layout_constraintEnd_toStartOf="@id/buttonAllin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBarRaise"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonAllin"
        style="@style/AppTheme.Button.GameActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sizing_3"
        android:background="@drawable/background_button_transparent"
        android:text="@string/game_activity_all_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonMinRaise"
        app:layout_constraintTop_toBottomOf="@id/seekBarRaise"
        />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/imageButtonClose"
        style="@style/AppTheme.Button.GameActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sizing_3"
        android:paddingTop="@dimen/sizing_1"
        android:paddingBottom="@dimen/sizing_1"
        android:background="@drawable/background_button_transparent"
        android:src="@drawable/ic_close_white_24dp"
        app:layout_constraintEnd_toStartOf="@id/imageButtonCheck"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMinRaise"
        />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/imageButtonCheck"
        style="@style/AppTheme.Button.GameActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sizing_3"
        android:paddingTop="@dimen/sizing_1"
        android:paddingBottom="@dimen/sizing_1"
        android:background="@drawable/background_button_transparent"
        android:src="@drawable/ic_check_white_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageButtonClose"
        app:layout_constraintTop_toBottomOf="@id/buttonMinRaise"
        />

</android.support.constraint.ConstraintLayout>
