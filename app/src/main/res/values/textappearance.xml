<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Text">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- PlayerProfileView -->

    <style name="AppTheme.Text.PlayerProfileView">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppTheme.Text.PlayerProfileView.Informations">
        <item name="android:textSize">@dimen/text_size_0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.PlayerProfileView.EditText">
        <item name="android:textSize">@dimen/text_size_0</item>"
        <item name="android:textStyle">bold</item>
    </style>

    <!-- WelcomeActivity -->

    <style name="AppTheme.Text.WelcomeActivity">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppTheme.Text.WelcomeActivity.Button">
        <item name="android:textSize">@dimen/text_size_7</item>"
        <item name="android:textStyle">bold</item>
    </style>

    <!-- SettingsActivity -->

    <style name="AppTheme.Text.SettingsActivity">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppTheme.Text.SettingsActivity.Title">
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.SettingsActivity.Parameter">
        <item name="android:textSize">@dimen/text_size_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.SettingsActivity.Error">
        <item name="android:textSize">@dimen/text_size_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="AppTheme.Text.SettingsActivity.Button">
        <item name="android:textSize">@dimen/text_size_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- GameActivity -->

    <style name="AppTheme.Text.GameActivity">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppTheme.Text.GameActivity.Button">
        <item name="android:textSize">@dimen/text_size_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.GameActivity.Informations">
        <item name="android:textSize">@dimen/text_size_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.GameActivity.Error">
        <item name="android:textSize">@dimen/text_size_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/error</item>
    </style>

</resources>
