<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- GENERAL -->

    <!-- Button -->

    <style name="AppTheme.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:paddingLeft">@dimen/sizing_2</item>
        <item name="android:paddingRight">@dimen/sizing_2</item>
    </style>

    <!-- SwitchCompat -->

    <style name="AppTheme.SwitchCompat">
        <item name="thumbTint">@color/switch_color_thumb</item>
        <item name="trackTint">@color/switch_color_track</item>
    </style>

    <!-- ImageButton -->

    <style name="AppTheme.ImageButton">
        <item name="android:paddingTop">@dimen/sizing_1</item>
        <item name="android:paddingBottom">@dimen/sizing_1</item>
        <item name="android:paddingLeft">@dimen/sizing_2</item>
        <item name="android:paddingRight">@dimen/sizing_2</item>
        <item name="android:background">@drawable/background_button_transparent</item>
    </style>

    <style name="AppTheme.ImageButton.PlayerProfileView">
        <item name="android:paddingTop">@dimen/sizing_min</item>
        <item name="android:paddingBottom">@dimen/sizing_min</item>
        <item name="android:paddingLeft">@dimen/sizing_0</item>
        <item name="android:paddingRight">@dimen/sizing_0</item>
    </style>

    <!-- EditText -->

    <style name="AppTheme.EditText">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_0</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_marginLeft">@dimen/sizing_0</item>
        <item name="android:layout_marginRight">@dimen/sizing_0</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- CheckBox -->

    <style name="AppTheme.CheckBox">
        <item name="android:buttonTint">@color/accent</item>
    </style>

    <!-- ACTIVITIES -->

    <!-- WelcomeActivity -->

    <style name="AppTheme.Button.WelcomeActivity">
        <item name="android:textAppearance">@style/AppTheme.Text.WelcomeActivity.Button</item>
    </style>

    <!-- SettingsActivity -->

    <style name="AppTheme.Button.SettingsActivity">
        <item name="android:textAppearance">@style/AppTheme.Text.SettingsActivity.Button</item>
    </style>

    <!-- GameActivity -->

    <style name="AppTheme.Button.GameActivity">
        <item name="android:textAppearance">@style/AppTheme.Text.GameActivity.Button</item>
    </style>

</resources>
